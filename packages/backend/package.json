{
  "name": "@pic-cube/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "run-s build:scanners start:all",
    "stop": "pm2 kill",
    "start:all": "pm2 start ./pm2.config.js",
    "start:all-dev": "run-s 'start:all --watch --no-daemon'",
    "start:api": "ts-node --transpile-only ./server.ts",
    "start:api-dev": "ts-node ./server.ts",
    "start:scanners": "pm2 start ./pm2.config.js --only scanners",
    "start:scanners-dev": "run-p 'start:scanners --watch --no-daemon' build:scanners-dev",
    "build:scanners": "tsc -p ./scanners/tsconfig.json",
    "build:scanners-dev": "run-s 'build:scanners -w'",
    "codegen": "graphql-codegen --config codegen.ts",
    "postinstall": "pm2 install typescript"
  },
  "dependencies": {
    "@graphql-tools/load-files": "6.6.1",
    "@pic-cube/api-schema": "0.1.0",
    "@prisma/client": "4.5.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/node": "18.11.3",
    "@types/uuid": "^8.3.4",
    "@types/workerpool": "^6.1.0",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-graphql": "0.12.0",
    "graphql": "16.6.0",
    "graphql-tools": "8.3.6",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.2.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "workerpool": "^6.3.0"
  },
  "devDependencies": {
    "prisma": "4.5.0"
  }
}
